#include <iostream>
using namespace std;


int X(int n) {

    if (n == 0) {
        return 1;
    }
   
    int sum = 0;
    for (int i = 0; i <= n-1; i++) {
        sum += (n-i)*(n-i)*X(i);
    }
    return sum;
}

int main() {
    int n;
    cout << "Nhap n: ";
    cin >> n;
    cout << "X(" << n << ") = " << X(n) << endl;

    return 0;
}
